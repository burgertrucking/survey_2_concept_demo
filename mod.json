{
    // The ID of your mod. Should be unique!!
    "id": "survey_2_concept_demo",
    // Displays on the main menu.
    "name": "SURVEY_PROGRAM_202X - CONCEPT DEMO",
    // Displays underneath the name. Optional.
    "subtitle": "",

    // The version of your mod.
    "version": "v0.0.1",
    // What version of the engine your mod was made with.
    "engineVer": "v0.10.0-dev",

    // The Deltarune chapter you'd like to base your mod off of.
    // Do keep in mind that you can control chapter-specific features
    // one by one using the config below.
    "chapter": 1,

    // The map that you start in when first starting the mod.
    "map": "room3",

    // The party. The first character is the player.
    "party": ["kris"],

    // The inventory. Contains three darkburgers, a cell phone and a shadow crystal by default.
    "inventory": {
        "items": [],
        "key_items": ["cell_phone"]
    },

    // Equipment for your party. Not specifying equipment defaults to the following.
    "equipment": {
        "kris": {
            "weapon": "light/pencil",
            "armor": []
        },
        "susie": {
            "weapon": "mane_ax",
            "armor": []
        },
        "ralsei": {
            "weapon": "red_scarf",
            "armor": []
        }
    },

    // Should never be true, but just in case. Restarts the entire engine when leaving the mod.
    // If you need this, you're most likely doing something wrong.
    "hardReset": false,

    // Whether the mod is hidden from the mod selection.
    "hidden": false,

    // Whether the game window's title should be set to the mod's name, and the icon to the image
    // in the file `window_icon.png`.
    // When your mod is configured as the engine's target mod, it's automatically done unless if
    // this option is explicitly set to false; else, it's done if this is set to true.
    "setWindowTitleAndIcon": null,

    // Config values for the engine and any libraries you may have.
    // These config values can control chapter-specific features as well.
    "config": {
        "kristal": {
            // Extra 48-slot item storage
            "enableStorage": true,
            // Enable recruit messages and menu
            "enableRecruits": false,
            // Whether the recruits progress in the menu will have spaces between the amounts
            "recruitsProgressSpaces": true,
            // Single-file save menu with no storage/recruits options
            "smallSaveMenu": false,
            // Reduces the amount of available weapons and armor slots in the inventory
            "lessEquipments": false,
            // Whether X-Actions appear in spell menu by default
            "partyActions": false,
            // Stat increases after defeating an enemy with violence
            "growStronger": true,
            // The character who grows stronger if they're in the party
            "growStrongerChara": false,
            // What sprite set Susie should use
            "susieStyle": 1,
            // What sprite set Ralsei should use
            "ralseiStyle": 1,
            // Whether the Tension Bar uses blocky corners or not.
            "oldTensionBar": false,
            // Whether to use Chapter 1 positions of UI elements or not.
            "oldUIPositions": false,
            // Whether to use Chapter 1 game over or not.
            "oldGameOver": true,
            // Whether to use Chapter 1/2 Rude Buster damage calculation and effect.
            "oldRudeBuster": false,
            // Whether battles should use the targeting system or not
            "targetSystem": true,
            // Whether the soul invulnerability will carry between waves in battles
            "soulInvBetweenWaves": true,
            // The default style for enemy speech bubbles
            "speechBubble": "round",
            // The red aura around enemies
            "enemyAuras": true,
            // Seeing +X when an enemy's mercy goes up
            "mercyMessages": true,
            // Whether the mercy bar should appear or not
            "mercyBar": true,
            // Whether the HP and Mercy bars should show percentages
            "enemyBarPercentages": true,
            // Whether TIRED enemy names and pacifying spells should flash white
            "pacifyGlow": true,
            // Whether a TIRED message should appear when an enemy becomes TIRED
            "tiredMessages": true,
            // Whether an enemy leaving TIRED should display an AWAKE message
            "awakeMessages": true,
            // Whether enemies' spareable text should be prioritized over tired / low-health text
            "prioritySpareableText": true,
            // Whether pushing a block should freeze the player
            "pushBlockInputLock": false,
            // Whether TP should be kept after battle instead of reset
            "keepTensionAfterBattle": true,
            // Whether spells should be usable in the overworld
            "overworldSpells": true,
            // If disabled, negative enemy damage heals the enemy
            "damageUnderflowFix": false,
            // Whether to use Dark Candy or Darker Candy
            "darkCandyForm": "dark",
            // Whether you can toss weapon items in the Light World inventory
            "canTossLightWeapons": true,
            // End of config
        }
    }
}
